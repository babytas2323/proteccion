{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "https://proteccion-v6o1.onrender.com/api/health"
    },
    {
      "src": "/api/accidents",
      "dest": "https://proteccion-v6o1.onrender.com/api/accidents"
    },
    {
      "src": "/api/accidents/restore",
      "dest": "https://proteccion-v6o1.onrender.com/api/accidents/restore"
    },
    {
      "src": "/api/(.*)",
      "dest": "https://proteccion-v6o1.onrender.com/api/$1"
    },
    {
      "src": "^/assets/(.*)$",
      "headers": {
        "cache-control": "max-age=31536000, immutable"
      }
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ]
}