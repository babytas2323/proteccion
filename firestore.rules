rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to accidents collection
    match /accidents/{document} {
      allow read, write: if true;
    }
    
    // Allow read/write access to test collection for authenticated users
    match /test/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to sensors collection (if you have one)
    match /sensors/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}